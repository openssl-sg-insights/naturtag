<MetadataViewScreen>:
    name: 'metadata'

    BoxLayout:
        orientation: 'vertical'
        MDTabs:
            id: metadata_tabs
            background_color: app.theme_cls.primary_color

            Tab:
                text: 'Combined'
                id: combined_tab
            Tab:
                text: 'Keywords'
                id: keywords_tab
            Tab:
                text: 'EXIF'
                id: exif_tab
            Tab:
                text: 'IPTC'
                id: iptc_tab
            Tab:
                text: 'XMP'
                id: xmp_tab
        StatusBar:
            id: status_bar
