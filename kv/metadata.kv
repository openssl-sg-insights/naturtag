<MetadataViewScreen>:
    name: 'metadata'

    BoxLayout:
        orientation: 'vertical'
        MDTabs:
            id: metadata_tabs
            background_color: app.theme_cls.primary_color

            Tab:
                text: 'Combined'
                ScrollViewY:
                    TextInput:
                        id: combined
                        readonly: True
                        multiline: True
                        size_hint_y: None
                        height: self.minimum_height
            Tab:
                text: 'Keywords'
                ScrollViewY:
                    TextInput:
                        id: keywords
                        readonly: True
                        multiline: True
                        size_hint_y: None
                        height: self.minimum_height
            Tab:
                text: 'EXIF'
                ScrollViewY:
                    TextInput:
                        id: exif
                        readonly: True
                        multiline: True
                        size_hint_y: None
                        height: self.minimum_height
            Tab:
                text: 'IPTC'
                ScrollViewY:
                    TextInput:
                        id: iptc
                        readonly: True
                        multiline: True
                        size_hint_y: None
                        height: self.minimum_height
            Tab:
                text: 'XMP'
                ScrollViewY:
                    TextInput:
                        id: xmp
                        readonly: True
                        multiline: True
                        size_hint_y: None
                        height: self.minimum_height
        StatusBar:
            id: status_bar
